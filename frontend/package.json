{
  "name": "github-trending-summarizer-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:extension": "npm run build && node scripts/build-extension.js",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:extension": "jest --testPathPatterns=extension --verbose",
    "test:integration": "jest --testPathPatterns=integration.test.tsx --verbose",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:critical": "./scripts/run-e2e-tests.sh critical",
    "test:e2e:api": "./scripts/run-e2e-tests.sh api",
    "test:e2e:performance": "./scripts/run-e2e-tests.sh performance",
    "test:e2e:visual": "./scripts/run-e2e-tests.sh visual",
    "test:e2e:accessibility": "./scripts/run-e2e-tests.sh accessibility",
    "test:e2e:mobile": "./scripts/run-e2e-tests.sh mobile",
    "test:e2e:cross-browser": "./scripts/run-e2e-tests.sh cross-browser",
    "test:e2e:comprehensive": "./scripts/run-e2e-tests.sh comprehensive",
    "test:e2e:smoke": "./scripts/run-e2e-tests.sh smoke",
    "test:performance": "jest --testPathPatterns=performance.test.tsx --verbose",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "analyze:bundle": "node scripts/bundle-analyzer.js",
    "analyze:performance": "node scripts/performance-monitor.js",
    "analyze": "npm run analyze:bundle && npm run analyze:performance",
    "build:analyze": "npm run build && npm run analyze",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.6.0",
    "clsx": "^2.1.1",
    "next": "^14.2.32",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "eslint-plugin-storybook": "^0.10.2",
    "jest": "^30.1.3",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8",
    "puppeteer": "^23.0.0",
    "storybook": "^8.6.14",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
